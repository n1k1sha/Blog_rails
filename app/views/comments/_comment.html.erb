<p>
  <strong>Commenter: <%= current_user.email %></strong>
</p>
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>
<% if user_signed_in? %>
  <% if current_user.id == comment.user_id %> 
    <p>
      <%= link_to "Destroy Comment", [comment.article, comment], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </p>
  <% end %>
<% end %>